{
  "name": "digital-persona-dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "postStartCommand": "[ -f .devcontainer/.env ] && export $(grep -v '^#' .devcontainer/.env | xargs); nohup ~/.local/bin/poetry run python scripts/start-services.py >/tmp/services.log 2>&1 &",
  "forwardPorts": [8000],
  "runArgs": [
    "-p", "8000:8000",
    "--add-host", "host.docker.internal:host-gateway"
  ],
  "portsAttributes": {
    "8000": {"label": "Interview API"}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "esbenp.prettier-vscode",
        "bierner.markdown-preview-github-styles",
        "mechatroner.rainbow-csv"
      ]
    }
  },
  "remoteEnv": {
    "OLLAMA_HOST": "http://host.docker.internal:11434"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace/digital-persona,type=bind",
  "workspaceFolder": "/workspace/digital-persona",
  "mounts": [
    "source=${localWorkspaceFolder}/data,destination=/workspace/data,type=bind"
  ]
}
