{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Big Five / HEXACO Trait Scores",
  "type": "object",
  "properties": {
    "openness":           { "type": ["number", "null"], "minimum": 0.0, "maximum": 1.0 },
    "conscientiousness":  { "type": ["number", "null"], "minimum": 0.0, "maximum": 1.0 },
    "extraversion":       { "type": ["number", "null"], "minimum": 0.0, "maximum": 1.0 },
    "agreeableness":      { "type": ["number", "null"], "minimum": 0.0, "maximum": 1.0 },
    "neuroticism":        { "type": ["number", "null"], "minimum": 0.0, "maximum": 1.0 },
    "honestyHumility":    { "type": ["number", "null"], "minimum": 0.0, "maximum": 1.0 },
    "emotionality":       { "type": ["number", "null"], "minimum": 0.0, "maximum": 1.0 }
  },
  "required": ["openness", "conscientiousness", "extraversion", "agreeableness", "neuroticism"]
}